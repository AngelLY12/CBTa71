---
import Layout from '../layouts/Layout.astro';

const pageTitle = 'Mis Métodos de Pago - SIGE';
---

<Layout title={pageTitle}>
  <div class="max-w-5xl mx-auto px-4 py-8 bg-white min-h-screen">
    
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-4 mb-4">
        <div class="w-14 h-14 bg-blue-100 rounded-2xl flex items-center justify-center">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-slate-800">Métodos de Pago</h1>
          <p class="text-slate-500">Gestiona tus tarjetas registradas</p>
        </div>
      </div>
      
      <div class="flex gap-3">
        <a href="/Dashboard" class="px-5 py-2.5 bg-slate-100 text-slate-700 font-semibold rounded-lg hover:bg-slate-200 transition-all flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Volver
        </a>
      </div>
    </div>

    <!-- Alert Message -->
    <div id="alert-message" class="hidden mb-6 p-4 rounded-lg border"></div>

    <!-- Loading Skeleton -->
    <div id="loading-skeleton" class="grid gap-4 md:grid-cols-2 mb-6">
      <div class="animate-pulse">
        <div class="bg-slate-200 h-32 rounded-xl"></div>
      </div>
      <div class="animate-pulse">
        <div class="bg-slate-200 h-32 rounded-xl"></div>
      </div>
    </div>

    <!-- Cards Grid -->
    <div id="cards-container" class="grid gap-4 md:grid-cols-2 mb-6 hidden">
      <!-- Cards will be rendered here -->
    </div>

    <!-- Empty State -->
    <div id="empty-state" class="hidden text-center py-12 bg-slate-50 rounded-xl border-2 border-dashed border-slate-300">
      <svg class="w-16 h-16 mx-auto text-slate-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
      </svg>
      <p class="text-slate-600 font-semibold mb-2">No tienes tarjetas registradas</p>
      <p class="text-slate-500 text-sm">Agrega una tarjeta para realizar pagos</p>
    </div>

    <!-- Add Card Button -->
    <div class="text-center mt-6">
      <button id="add-card-btn" class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-all shadow-lg flex items-center gap-2 mx-auto">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Agregar Nueva Tarjeta
      </button>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="delete-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center p-4 bg-slate-900/60 backdrop-blur-sm">
      <div class="bg-white rounded-2xl p-6 w-full max-w-md shadow-2xl">
        <h3 class="text-xl font-bold text-slate-800 mb-3">Confirmar eliminación</h3>
        <p class="text-slate-600 mb-6">¿Estás seguro de que deseas eliminar esta tarjeta? Esta acción no se puede deshacer.</p>
        <div class="flex gap-3">
          <button id="cancel-delete-btn" class="flex-1 py-2.5 bg-slate-100 text-slate-700 font-semibold rounded-lg hover:bg-slate-200 transition-all">
            Cancelar
          </button>
          <button id="confirm-delete-btn" class="flex-1 py-2.5 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-all">
            Eliminar
          </button>
        </div>
      </div>
    </div>
  </div>

  <script type="module">
    import AuthService from '/src/utils/authService.js';
    import { API_ENDPOINTS, handleAPIResponse } from '/src/config/api.js';

    const alertMessage = document.getElementById('alert-message');
    const loadingSkeleton = document.getElementById('loading-skeleton');
    const cardsContainer = document.getElementById('cards-container');
    const emptyState = document.getElementById('empty-state');
    const addCardBtn = document.getElementById('add-card-btn');
    const deleteModal = document.getElementById('delete-modal');
    const cancelDeleteBtn = document.getElementById('cancel-delete-btn');
    const confirmDeleteBtn = document.getElementById('confirm-delete-btn');
    const AUTO_REFRESH_INTERVAL_MS = 180000;
    let autoRefreshTimer = null;
    let autoRefreshFocusHandler = null;
    let autoRefreshVisibilityHandler = null;

    let currentDeleteId = null;

    function showAlert(message, type = 'success') {
      alertMessage.className = `mb-6 p-4 rounded-lg border ${
        type === 'success' 
          ? 'bg-green-50 border-green-200 text-green-800' 
          : 'bg-red-50 border-red-200 text-red-800'
      }`;
      alertMessage.textContent = message;
      alertMessage.classList.remove('hidden');
      setTimeout(() => alertMessage.classList.add('hidden'), 5000);
    }

    function getBrandIcon(brand) {
      const icons = {
        visa: `<svg class="w-12 h-8" viewBox="0 0 48 32" fill="none"><rect width="48" height="32" rx="4" fill="#1434CB"/><text x="24" y="20" text-anchor="middle" fill="white" font-size="14" font-weight="bold">VISA</text></svg>`,
        mastercard: `<svg class="w-12 h-8" viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#EB001B"/><circle cx="18" cy="16" r="8" fill="#FF5F00"/><circle cx="30" cy="16" r="8" fill="#F79E1B"/></svg>`,
        amex: `<svg class="w-12 h-8" viewBox="0 0 48 32"><rect width="48" height="32" rx="4" fill="#006FCF"/><text x="24" y="20" text-anchor="middle" fill="white" font-size="10" font-weight="bold">AMEX</text></svg>`,
      };
      return icons[brand?.toLowerCase()] || `<div class="w-12 h-8 bg-slate-300 rounded flex items-center justify-center text-xs font-bold text-slate-600">${brand || 'CARD'}</div>`;
    }

    function renderCard(card) {
      const div = document.createElement('div');
      div.className = 'bg-gradient-to-br from-slate-800 to-slate-900 rounded-xl p-5 text-white shadow-xl relative overflow-hidden';
      div.innerHTML = `
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -mr-16 -mt-16"></div>
        <div class="relative z-10">
          <div class="flex justify-between items-start mb-6">
            ${getBrandIcon(card.brand)}
            <button class="delete-card-btn p-2 hover:bg-white/10 rounded-lg transition-colors" data-id="${card.id}">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </button>
          </div>
          <div class="mb-4">
            <p class="text-xl font-mono tracking-wider">${card.masked_card || '**** **** **** ****'}</p>
          </div>
          <div class="flex justify-between items-end">
            <div>
              <p class="text-xs text-slate-400 mb-1">Vencimiento</p>
              <p class="font-semibold">${card.expiration_date || 'N/A'}</p>
            </div>
            <div class="px-2 py-1 bg-green-500/20 border border-green-500/50 rounded text-xs font-semibold text-green-300">
              ${card.status === 'active' ? 'Activa' : 'Inactiva'}
            </div>
          </div>
        </div>
      `;
      return div;
    }

    async function loadCards(forceRefresh = false) {
      try {
        loadingSkeleton.classList.remove('hidden');
        cardsContainer.classList.add('hidden');
        emptyState.classList.add('hidden');

        const userId = localStorage.getItem('userId');
        if (!userId) {
          showAlert('No se pudo obtener el ID de usuario', 'error');
          return;
        }

        const url = `${API_ENDPOINTS.cards.list(userId)}${forceRefresh ? '?forceRefresh=true' : ''}`;
        const response = await AuthService.authenticatedFetch(url);
        const data = await handleAPIResponse(response);

        const cards = data?.data?.cards || [];

        loadingSkeleton.classList.add('hidden');

        if (cards.length === 0) {
          emptyState.classList.remove('hidden');
        } else {
          cardsContainer.innerHTML = '';
          cards.forEach(card => {
            const cardElement = renderCard(card);
            cardsContainer.appendChild(cardElement);
          });
          cardsContainer.classList.remove('hidden');

          // Attach delete handlers
          document.querySelectorAll('.delete-card-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
              const cardId = e.currentTarget.getAttribute('data-id');
              openDeleteModal(cardId);
            });
          });
        }
      } catch (error) {
        loadingSkeleton.classList.add('hidden');
        console.error('Error loading cards:', error);
        showAlert(error?.message || 'Error al cargar las tarjetas', 'error');
      }
    }

    async function addCard() {
      try {
        addCardBtn.disabled = true;
        addCardBtn.textContent = 'Procesando...';

        const response = await AuthService.authenticatedFetch(API_ENDPOINTS.cards.create, {
          method: 'POST',
        });
        const data = await handleAPIResponse(response);

        if (data?.data?.checkout_url) {
          window.location.href = data.data.checkout_url;
        } else {
          showAlert('No se pudo obtener la URL de registro', 'error');
        }
      } catch (error) {
        console.error('Error adding card:', error);
        showAlert(error?.message || 'Error al agregar tarjeta', 'error');
      } finally {
        addCardBtn.disabled = false;
        addCardBtn.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Agregar Nueva Tarjeta
        `;
      }
    }

    function openDeleteModal(cardId) {
      currentDeleteId = cardId;
      deleteModal.classList.remove('hidden');
    }

    function closeDeleteModal() {
      currentDeleteId = null;
      deleteModal.classList.add('hidden');
    }

    async function deleteCard() {
      if (!currentDeleteId) return;

      try {
        confirmDeleteBtn.disabled = true;
        confirmDeleteBtn.textContent = 'Eliminando...';

        const response = await AuthService.authenticatedFetch(
          API_ENDPOINTS.cards.delete(currentDeleteId),
          { method: 'DELETE' }
        );
        await handleAPIResponse(response);

        showAlert('Tarjeta eliminada correctamente', 'success');
        closeDeleteModal();
        loadCards(true);
      } catch (error) {
        console.error('Error deleting card:', error);
        showAlert(error?.message || 'Error al eliminar la tarjeta', 'error');
      } finally {
        confirmDeleteBtn.disabled = false;
        confirmDeleteBtn.textContent = 'Eliminar';
      }
    }

    // Event listeners
    addCardBtn.addEventListener('click', addCard);
    cancelDeleteBtn.addEventListener('click', closeDeleteModal);
    confirmDeleteBtn.addEventListener('click', deleteCard);

    // Check for success callback from Stripe
    const params = new URLSearchParams(window.location.search);
    if (params.get('success') === '1') {
      showAlert('✅ Tarjeta agregada correctamente', 'success');
      window.history.replaceState({}, '', '/cards');
    }

    const triggerAutoRefresh = () => {
      if (document.hidden) return;
      loadCards(true).catch((err) => console.warn('⚠️ Auto-refresh cards:', err?.message || err));
    };

    const setupAutoRefresh = () => {
      if (autoRefreshTimer) clearInterval(autoRefreshTimer);
      autoRefreshTimer = setInterval(triggerAutoRefresh, AUTO_REFRESH_INTERVAL_MS);

      if (!autoRefreshFocusHandler) {
        autoRefreshFocusHandler = () => triggerAutoRefresh();
        window.addEventListener('focus', autoRefreshFocusHandler);
      }

      if (!autoRefreshVisibilityHandler) {
        autoRefreshVisibilityHandler = () => {
          if (!document.hidden) triggerAutoRefresh();
        };
        document.addEventListener('visibilitychange', autoRefreshVisibilityHandler);
      }
    };

    // Initial load
    setupAutoRefresh();
    loadCards();

    window.addEventListener('beforeunload', () => {
      if (autoRefreshTimer) {
        clearInterval(autoRefreshTimer);
        autoRefreshTimer = null;
      }
    }, { once: true });
  </script>

  <style>
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    .animate-pulse {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
  </style>
</Layout>
