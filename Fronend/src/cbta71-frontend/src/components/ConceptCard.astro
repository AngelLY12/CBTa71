---
import { Concept } from '../types/index.ts';

const ConceptCard = ({ concept }: { concept: Concept }) => {
    return (
        <div class="p-4 border border-gray-200 rounded-xl shadow-md flex flex-col md:flex-row justify-between items-start md:items-center bg-white transition-all duration-300">
            <div class="flex-1 min-w-0 pr-4 mb-4 md:mb-0">
                <h3 class="text-lg font-bold text-gray-900 truncate">
                    {concept.title} - {concept.period}
                </h3>
                <p class="text-3xl font-extrabold text-[#2e594d] my-1">
                    ${concept.amount.toFixed(2)}
                </p>
                <p class="text-sm text-gray-500">
                    {concept.description}
                </p>
                {concept.status === 'finished' && (
                    <span class="mt-2 inline-block px-2 py-0.5 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                        Finalizado
                    </span>
                )}
            </div>
        </div>
    );
};

export default ConceptCard;
---