---
import '../styles/global.css';
import '../styles/tailwind.css';
const API_BASE_URL = (import.meta.env.PUBLIC_API_BASE_URL ?? (() => { throw new Error('Falta PUBLIC_API_BASE_URL'); })()).replace(/\/$/, '');
const pageTitle = 'Restablecer Contraseña | CBTA 71';
---

<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <link rel="icon" href="/Logo.png" type="image/png" />
</head>
<body class="min-h-screen antialiased">
<main>
    <style is:global>
        [x-cloak] { display: none !important; }
        
        .bg-institucional { background-color: #2E594D; }
        .text-institucional { color: #2E594D; }
        .border-institucional { border-color: #2E594D; }
        .hover-institucional:hover { background-color: #234238; }
        
        .input-institucional:focus {
            outline: none;
            border-color: #2E594D;
            box-shadow: 0 0 0 3px rgba(46, 89, 77, 0.1);
        }
    </style>

    <div x-data="resetPasswordForm" class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 flex items-center justify-center p-4">
        
        <!-- Notificación -->
        <template x-teleport="body">
            <div x-show="notification.show" x-cloak
                 x-transition:enter="transition ease-out duration-300"
                 class="fixed top-5 right-5 z-[100] p-4 rounded-xl shadow-2xl text-white font-bold"
                 :class="notification.type === 'success' ? 'bg-institucional' : 'bg-red-600'">
                <span x-text="notification.message"></span>
            </div>
        </template>

        <div class="w-full max-w-md">
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-institucional rounded-2xl flex items-center justify-center shadow-lg mx-auto mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-institucional mb-2">Restablecer Contraseña</h1>
                <p class="text-slate-600 text-sm">Ingresa tu nueva contraseña para recuperar acceso a tu cuenta</p>
            </div>

            <!-- Mensaje de error si faltan parámetros -->
            <div x-show="!token || !email" class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-red-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                        <h3 class="font-bold text-red-900">Enlace inválido</h3>
                        <p class="text-sm text-red-700 mt-1">El enlace de recuperación no contiene los parámetros requeridos (token y email).</p>
                        <a href="/" class="text-sm text-red-600 hover:underline mt-2 inline-block">← Volver al inicio</a>
                    </div>
                </div>
            </div>

            <!-- Formulario -->
            <form @submit.prevent="resetPassword()" x-show="token && email" class="bg-white rounded-2xl shadow-lg p-8 space-y-6">
                
                <!-- Email (solo lectura) -->
                <div>
                    <label class="block text-sm font-bold text-slate-400 uppercase mb-2">Email</label>
                    <input 
                        type="email" 
                        x-model="email"
                        autocomplete="username"
                        readonly
                        class="w-full px-4 py-3 bg-slate-100 border border-slate-300 rounded-lg text-slate-600 cursor-not-allowed"
                    />
                    <p class="text-xs text-slate-500 mt-1">Este campo se completó automáticamente del enlace de recuperación</p>
                </div>

                <!-- Nueva Contraseña -->
                <div>
                    <label class="block text-sm font-bold text-slate-400 uppercase mb-2">Nueva Contraseña</label>
                    <div class="relative">
                        <input 
                            :type="showPassword ? 'text' : 'password'"
                            x-model="form.password"
                            placeholder="Mínimo 8 caracteres"
                            autocomplete="new-password"
                            required
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg input-institucional"
                        />
                        <button 
                            type="button"
                            @click="showPassword = !showPassword"
                            class="absolute right-3 top-3 text-slate-400 hover:text-slate-600"
                        >
                            <svg x-show="!showPassword" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                            <svg x-show="showPassword" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-4.803m5.596-3.856a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        </button>
                    </div>
                    <p class="text-xs text-slate-500 mt-1">Usa mayúsculas, minúsculas, números y símbolos para una contraseña segura</p>
                </div>

                <!-- Confirmar Contraseña -->
                <div>
                    <label class="block text-sm font-bold text-slate-400 uppercase mb-2">Confirmar Contraseña</label>
                    <div class="relative">
                        <input 
                            :type="showPasswordConfirm ? 'text' : 'password'"
                            x-model="form.password_confirmation"
                            placeholder="Repite la contraseña"
                            autocomplete="new-password"
                            required
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg input-institucional"
                        />
                        <button 
                            type="button"
                            @click="showPasswordConfirm = !showPasswordConfirm"
                            class="absolute right-3 top-3 text-slate-400 hover:text-slate-600"
                        >
                            <svg x-show="!showPasswordConfirm" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                            <svg x-show="showPasswordConfirm" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-4.803m5.596-3.856a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Validación de contraseña coincidente -->
                <div x-show="form.password && form.password_confirmation && form.password !== form.password_confirmation" 
                     class="p-3 bg-amber-50 border border-amber-200 rounded-lg flex items-start gap-2">
                    <svg class="w-5 h-5 text-amber-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 0v2m0-6v-2m0 6v2M7.457 11H5.25A2.25 2.25 0 003 13.25v5.5A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75v-5.5A2.25 2.25 0 0018.75 11h-2.207m-10.036 0H7.5a2.25 2.25 0 110 4.5h.008v.008a2.25 2.25 0 110-4.5zm0 0H5.25"/>
                    </svg>
                    <span class="text-sm text-amber-700 font-medium">Las contraseñas no coinciden</span>
                </div>

                <!-- Botones -->
                <div class="flex gap-3 pt-4">
                    <a href="/" class="flex-1 py-3 font-bold text-slate-600 hover:bg-slate-100 rounded-lg border-2 border-slate-200 transition-colors text-center">
                        Cancelar
                    </a>
                    <button 
                        type="submit" 
                        :disabled="isLoading || !form.password || !form.password_confirmation || form.password !== form.password_confirmation"
                        class="flex-1 py-3 bg-institucional text-white font-bold rounded-lg shadow-lg hover-institucional disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
                    >
                        <span x-show="!isLoading">Restablecer Contraseña</span>
                        <span x-show="isLoading" class="flex items-center justify-center gap-2">
                            <svg class="animate-spin h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            Procesando...
                        </span>
                    </button>
                </div>

                <!-- Link de ayuda -->
                <div class="text-center pt-4 border-t border-slate-200">
                    <p class="text-sm text-slate-600">¿Problemas con tu contraseña?</p>
                    <a href="/" class="text-sm text-institucional hover:underline font-semibold">Solicitar nuevo enlace de recuperación</a>
                </div>
            </form>
        </div>
    </div>

</main>

<script is:inline define:vars={{ API_BASE_URL }}>
    function resetPasswordForm() {
        return {
            token: '',
            email: '',
            form: {
                password: '',
                password_confirmation: ''
            },
            showPassword: false,
            showPasswordConfirm: false,
            isLoading: false,
            notification: {
                show: false,
                message: '',
                type: 'success'
            },

            init() {
                // Obtener parámetros de la URL
                const urlParams = new URLSearchParams(window.location.search);
                this.token = String(urlParams.get('token') || '').trim();
                this.email = String(urlParams.get('email') || '').trim().toLowerCase();
            },

            showNotify(msg, type = 'success') {
                this.notification = { show: true, message: msg, type };
                setTimeout(() => this.notification.show = false, 3000);
            },

            async resetPassword() {
                // Validaciones
                if (!this.token || !this.email) {
                    this.showNotify('Parámetros inválidos en el enlace', 'error');
                    return;
                }

                if (!this.form.password || !this.form.password_confirmation) {
                    this.showNotify('Por favor completa todos los campos', 'error');
                    return;
                }

                if (this.form.password !== this.form.password_confirmation) {
                    this.showNotify('Las contraseñas no coinciden', 'error');
                    return;
                }

                if (this.form.password.length < 8) {
                    this.showNotify('La contraseña debe tener al menos 8 caracteres', 'error');
                    return;
                }

                this.isLoading = true;

                try {
                    const payload = new URLSearchParams({
                        token: this.token,
                        email: this.email,
                        password: this.form.password,
                        password_confirmation: this.form.password_confirmation
                    });

                    const response = await fetch(`${API_BASE_URL}/v1/reset-password`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded;charset=UTF-8',
                            'Accept': 'application/json'
                        },
                        body: payload.toString()
                    });

                    const data = await response.json();

                    if (response.ok && data.success) {
                        this.showNotify('✅ Contraseña restablecida exitosamente. Redirigiendo al login...', 'success');
                        
                        // Redirigir al login después de 2 segundos
                        setTimeout(() => {
                            window.location.href = '/';
                        }, 2000);
                    } else {
                        // Manejar errores de validación
                        const errorMessage = data.message || 'Error al restablecer la contraseña';
                        const errors = data.errors || {};

                        if (errors.token) {
                            const tokenError = Array.isArray(errors.token) ? errors.token.join(', ') : String(errors.token);
                            this.showNotify(`Enlace inválido o expirado. ${tokenError}`.trim(), 'error');
                        } else if (errors.email) {
                            const emailError = Array.isArray(errors.email) ? errors.email.join(', ') : String(errors.email);
                            if (emailError.toLowerCase().includes('password reset token is invalid')) {
                                this.showNotify('El enlace de recuperación es inválido o ya expiró. Solicita uno nuevo.', 'error');
                            } else {
                                this.showNotify(`Problema con el email: ${emailError}`, 'error');
                            }
                        } else if (errors.password) {
                            this.showNotify('La contraseña no cumple con los requisitos: ' + errors.password.join(', '), 'error');
                        } else if (errors.password_confirmation) {
                            const confirmError = Array.isArray(errors.password_confirmation)
                                ? errors.password_confirmation.join(', ')
                                : String(errors.password_confirmation);
                            this.showNotify(`Confirmación de contraseña inválida: ${confirmError}`, 'error');
                        } else {
                            const firstFieldErrors = Object.values(errors)
                                .flatMap(value => Array.isArray(value) ? value : [value])
                                .map(value => String(value || '').trim())
                                .filter(Boolean);

                            this.showNotify(firstFieldErrors[0] || errorMessage, 'error');
                        }
                    }
                } catch (error) {
                    this.showNotify('Error de conexión. Por favor intenta de nuevo.', 'error');
                } finally {
                    this.isLoading = false;
                }
            }
        };
    }

    if (typeof Alpine !== 'undefined') {
        Alpine.data('resetPasswordForm', resetPasswordForm);
    } else {
        document.addEventListener('alpine:init', () => {
            Alpine.data('resetPasswordForm', resetPasswordForm);
        });
    }
</script>

</body>
</html>
