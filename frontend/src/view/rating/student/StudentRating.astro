---
const heads = [
    "Id",
    "Matricula",
    "Nombre",
    "Apellidos",
    "Carrera",
    "Semestre",
    "Grupo",
    "Estatus",
    "Promedio General",
];

const student = {
    id: -1,
    matricula: "",
    nombre: "",
