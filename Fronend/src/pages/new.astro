                        <label class="cursor-pointer">
                            <input type="radio" name="status" value="inactive" x-model="formData.status" class="sr-only peer">
                            <div class="select-card peer-checked:select-card-active peer-checked:border-gray-400 flex items-start gap-4">
                                <div class="p-3 rounded-lg bg-gray-200 text-gray-600 flex items-center justify-center w-10 h-10 shrink-0">
                                    <i class="fas fa-pause-circle text-lg"></i>
