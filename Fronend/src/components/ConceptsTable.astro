---
// src/components/ConceptsTable.astro
// Componente de tabla para mostrar los conceptos de pago.

interface Concept {
  id: string;
  concept: string;
  amount: string; // Esperamos que ya venga formateado como string ($1,067.00)
  start: string;
  end: string;
  status: 'Activa' | 'Finalizado';
}

interface Props {
  concepts: Concept[];
}

const { concepts } = Astro.props;

// Función para determinar el color del badge de estado
const getStatusClasses = (status: 'Activa' | 'Finalizado') => {
  switch (status) {
    case 'Activa':
      return 'bg-green-100 text-green-800 border-green-300';
    case 'Finalizado':
      return 'bg-gray-100 text-gray-600 border-gray-300';
    default:
      return 'bg-yellow-100 text-yellow-800 border-yellow-300';
  }
};
---

<div class="overflow-x-auto rounded-xl shadow-lg border border-gray-200">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-[#2e594d]">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider">
          ID
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider">
          Concepto
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider">
          Monto
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider">
          Inicio
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider">
          Fin
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider">
          Estado
        </th>
        <th scope="col" class="relative px-6 py-3">
          <span class="sr-only">Acciones</span>
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      {concepts.map((item) => (
        <tr class="hover:bg-gray-50 transition duration-150 ease-in-out">
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
            {item.id}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
            {item.concept}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-bold">
            {item.amount}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            {item.start}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            {item.end}
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class={`px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full border ${getStatusClasses(item.status)}`}>
              {item.status}
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <a href={`/conceptos/${item.id}`} class="text-[#2e594d] hover:text-[#3b7666] font-medium transition duration-150 ease-in-out">Ver detalles</a>
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
