---
interface Props {
  title: string;
}

const { title } = Astro.props;

// Esta es la única línea que necesitas para importar los estilos de Tailwind.
import '../styles/global.css'; 
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
    /* Estilos globales para el sidebar y el contenido */
    body {
      font-family: 'Inter', sans-serif; /* Puedes cambiar la fuente si tienes otra */
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      background-color: #f0f2f5; /* Color de fondo general */
    }
    /* Estilos del sidebar */
    .sidebar {
      width: 250px;
      height: 100vh;
      background-color: #1a362a; /* Verde oscuro */
      color: white;
      display: flex;
      flex-direction: column;
      padding: 1.5rem 0;
      position: fixed;
      left: 0;
      top: 0;
      z-index: 10;
      box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }
    .sidebar-logo {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 2rem;
      padding: 0 1.5rem;
    }
    .sidebar-logo img {
      height: 40px; /* Tamaño del logo */
      margin-right: 0.75rem;
    }
    .sidebar-nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .sidebar-nav li a {
      display: flex;
      align-items: center;
      padding: 1rem 1.5rem;
      color: white;
      text-decoration: none;
      font-size: 1rem;
      transition: background-color 0.2s ease;
    }
    .sidebar-nav li a:hover,
    .sidebar-nav li a.active {
      background-color: #2e594d; /* Verde un poco más claro al pasar el ratón o activo */
      border-left: 4px solid #4ade80; /* Barra verde brillante */
    }
    .sidebar-nav li a svg {
      margin-right: 1rem;
      width: 24px;
      height: 24px;
    }
    .sidebar-bottom {
      margin-top: auto;
    }
    .main-content {
      margin-left: 250px; /* Deja espacio para el sidebar */
      padding: 2rem;
      flex-grow: 1;
      background-color: #f0f2f5;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="sidebar-logo">
      <img src="/cbta71-logo.png" alt="CBTA 71 Logo" />
      <div>
        <h1 class="text-xl font-bold">CBTA 71</h1>
        <p class="text-sm">Sistema de pagos</p>
      </div>
    </div>
    <nav class="sidebar-nav flex-grow">
      <ul>
        <li>
          <a href="/dashboard" class="active">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-layout-dashboard" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M4 4h8v4h-8z"></path>
              <path d="M4 12h8v8h-8z"></path>
              <path d="M16 4h4v8h-4z"></path>
              <path d="M16 16h4v4h-4z"></path>
            </svg>
            Dashboard
          </a>
        </li>
        <li>
          <a href="/conceptos">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-book" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M3 19a9 9 0 0 1 9 0a9 9 0 0 1 9 0"></path>
              <path d="M3 6a9 9 0 0 1 9 0a9 9 0 0 1 9 0"></path>
              <path d="M3 6v13"></path>
              <path d="M12 6v13"></path>
              <path d="M21 6v13"></path>
            </svg>
            Conceptos
          </a>
        </li>
        <li>
          <a href="/estudiantes">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-users" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path>
              <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
              <path d="M16 3.161a3 3 0 1 0 3.839 3.839"></path>
              <path d="M16 14v-1a4 4 0 0 1 4 -4h1"></path>
            </svg>
            Estudiantes
          </a>
        </li>
        <li>
          <a href="/pagos">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-wallet" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M17 8v-3a1 1 0 0 0 -1 -1h-10a2 2 0 0 0 0 4h12a1 1 0 0 1 1 1v3m0 4v3a1 1 0 0 1 -1 1h-12a2 2 0 0 0 0 4h12a1 1 0 0 0 1 -1v-3"></path>
              <path d="M20 12v4h-4a2 2 0 0 1 0 -4h4"></path>
            </svg>
            Pagos
          </a>
        </li>
      </ul>
    </nav>
    <div class="sidebar-bottom">
      <ul>
        <li>
          <a href="/salir">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-logout" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2"></path>
              <path d="M7 12h14l-3 -3m0 6l3 -3"></path>
            </svg>
            Salir
          </a>
        </li>
      </ul>
    </div>
  </div>
  <main class="main-content">
    <slot />
  </main>
</body>
</html>