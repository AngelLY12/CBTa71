---
import Layout from '../../../layouts/Layout.astro';
import ConceptForm from '../../../components/ConceptForm.astro';
import { concepts } from '../../../lib/concepts.ts';

const id = Number(new URLSearchParams(window.location.search).get('id'));
const concept = concepts.find(c => c.id === id);

---

<Layout title="Editar Concepto - CBTA 71">
    <div class="max-w-4xl mx-auto p-4">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">Editar Concepto</h1>
        {concept ? (
            <ConceptForm 
                title={concept.title} 
                period={concept.period} 
                amount={concept.amount} 
                description={concept.description} 
                id={concept.id} 
            />
        ) : (
            <p class="text-red-500">Concepto no encontrado.</p>
        )}
    </div>
</Layout>